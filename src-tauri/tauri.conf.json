{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "signalk-server",
  "version": "0.1.0",
  "identifier": "org.signalk.server",
  "build": {
    "frontendDist": "../packages/server-admin-ui/public",
    "devUrl": "http://192.168.0.122:3000",
    "beforeDevCommand": "npm run watch",
    "beforeBuildCommand": "npm run build:all"
  },
  "app": {
    "windows": [
      {
        "title": "signalk-server",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
