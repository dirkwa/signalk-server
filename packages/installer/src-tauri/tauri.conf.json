{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "SignalK Installer",
  "version": "2.19.0",
  "identifier": "org.signalk.installer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bash scripts/bundle-all.sh && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "SignalK Server Installer",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/*",
      "resources/signalk-server/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["xdg-utils"],
        "section": "utils"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/SignalK/signalk-server/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEzODNDMTZDOUZDQzg0MjAKUldRZ2hNeWZiTUdERThqaUkrZExOK1kySCtxdmJVVk1Scm00UXl3ak4zMDdiZzdrK1NvVW8wdXIK"
    }
  }
}
